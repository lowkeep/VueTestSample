{
  "roots": [
    "<rootDir>/src"
  ],
  "testMatch": [
    "**/__tests__/**/*.+(ts|tsx|js)",
    "**/?(*.)+(spec|test).+(ts|tsx|js)"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "reporters": [
    "default",
    ["jest-html-reporters",
    {
      "pageTitle": "あいうえおTest Report",
      "outputPath": "test/test-report.html"
    }]
  ],
  "collectCoverage": true,
    "coverageDirectory": "test/coverage"
}